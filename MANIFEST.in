# Include documentation
include README.md
include LICENSE
include requirements.txt
include pyproject.toml
include setup.py

# Include web assets
recursive-include web *.js
recursive-include web *.html
recursive-include web *.css
recursive-include web *.json

# Include images and assets
recursive-include images *.png
recursive-include images *.jpg
recursive-include images *.jpeg
recursive-include images *.gif

# Include Excel templates and examples
recursive-include examples *.xlsx
recursive-include examples *.json
recursive-include . *.xlsx

# Include documentation
recursive-include docs *.md
recursive-include docs *.txt

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude .git*
global-exclude *.backup
prune __pycache__